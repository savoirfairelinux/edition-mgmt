<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE openerp SYSTEM "openerp.dtd">
<openerp>
  <data>
      <record forcecreate="True" id="decimal_precision_spine" model="decimal.precision">
          <field name="name">Product Thickness</field>
          <field name="digits">4</field>
      </record>

    <record id="product_thickness_form_view" model="ir.ui.view">
      <field name="name">Product Template: thickness field</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <field name="list_price" position="after">
          <field name="thickness"/>
        </field>
      </field>
    </record>


  </data>
</openerp>

