<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="base_format_country_form">
            <field name="name">base.format.country.form</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_form"/>
            <field name="arch" type="xml">
                <field name="address_format" position="after">
                    <group>
                        <field name="allow_for_destination"/>
                    </group>

                    <group>
                        <field name="format_ids"/>
                    </group>
                    <div class="oe_module_name">
                        <p>Several standards formats may be assigned by default to a country.
                            <br/>
                            When the customer processes his order,  the standard formats offered to him will be the ones added here to a country.
                        </p>
                    </div>
                </field>
            </field>
        </record>

        <record id="allowed_destination_product_template" model="ir.ui.view">
            <field name="name">allowed.destination.product.template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="list_price" position="after">
                    <field name="order_destination"/>
                </field>
            </field>
        </record>

    </data>
</openerp>

