<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="product_format_form_view">
            <field name="name">product.format.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="list_price" position="after">
                    <field name="format"/>
                    <field name="custom_format"/>
                    <field name="custom_format_width"
                           attrs="{'invisible':[('custom_format','=',False)]}"
                            />
                    <field name="custom_format_height"
                           attrs="{'invisible':[('custom_format','=',False)]}"
                            />

                </field>
            </field>
        </record>
    </data>
</openerp>

